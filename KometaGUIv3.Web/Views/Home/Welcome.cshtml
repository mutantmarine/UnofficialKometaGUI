@{
    ViewData["Title"] = "Welcome";
}

<div class="welcome-hero">
    <h1 class="welcome-title">Welcome to Kometa GUI v3</h1>
    <p class="page-description">
        A modern, web-based interface for managing your Kometa media library configurations with real-time synchronization.
    </p>
</div>

<div class="welcome-features">
    <div class="feature-card">
        <div class="feature-icon">👥</div>
        <h3 class="feature-title">Profile Management</h3>
        <p class="feature-description">
            Create and manage multiple configuration profiles for different media libraries or setups.
        </p>
    </div>

    <div class="feature-card">
        <div class="feature-icon">🔗</div>
        <h3 class="feature-title">Easy Connections</h3>
        <p class="feature-description">
            Simple setup for Plex and TMDb with automatic validation and library discovery.
        </p>
    </div>

    <div class="feature-card">
        <div class="feature-icon">📊</div>
        <h3 class="feature-title">Rich Collections</h3>
        <p class="feature-description">
            Access to 77+ default collections including charts, awards, genres, and streaming services.
        </p>
    </div>

    <div class="feature-card">
        <div class="feature-icon">🎨</div>
        <h3 class="feature-title">Visual Overlays</h3>
        <p class="feature-description">
            Intuitive overlay configuration with visual positioning and multi-level support.
        </p>
    </div>

    <div class="feature-card">
        <div class="feature-icon">⚙️</div>
        <h3 class="feature-title">Optional Services</h3>
        <p class="feature-description">
            Integrate with Tautulli, Radarr, Sonarr, and other services for enhanced functionality.
        </p>
    </div>

    <div class="feature-card">
        <div class="feature-icon">📝</div>
        <h3 class="feature-title">YAML Generation</h3>
        <p class="feature-description">
            Automatic YAML configuration generation with professional templates and validation.
        </p>
    </div>

    <div class="feature-card">
        <div class="feature-icon">🚀</div>
        <h3 class="feature-title">Built-in Execution</h3>
        <p class="feature-description">
            Run Kometa directly from the interface with real-time log monitoring and scheduling.
        </p>
    </div>

    <div class="feature-card">
        <div class="feature-icon">🔄</div>
        <h3 class="feature-title">Real-time Sync</h3>
        <p class="feature-description">
            Changes made in the web interface instantly sync with the Windows application.
        </p>
    </div>

    <div class="feature-card">
        <div class="feature-icon">🌐</div>
        <h3 class="feature-title">Web Access</h3>
        <p class="feature-description">
            Access your Kometa configuration from any browser while the localhost server is running.
        </p>
    </div>
</div>

<div style="text-align: center; margin: 50px 0;">
    <a href="@Url.Action("ProfileManagement", "Home")" class="btn btn-primary btn-lg">
        Let's Get Started! →
    </a>
    <p style="margin-top: 20px; color: var(--text-muted);">
        Start by creating or selecting a profile to configure your Kometa setup.
    </p>
</div>

<div class="card" style="margin-top: 40px;">
    <div class="card-header">
        <h3 class="card-title">Key Features</h3>
    </div>
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 30px;">
        <div>
            <h4 style="color: var(--accent-primary); margin-bottom: 15px;">🎯 Professional Results</h4>
            <ul style="color: var(--text-secondary); line-height: 1.8;">
                <li>Comprehensive chart and award collections</li>
                <li>Visual overlay positioning with 77+ default collections</li>
                <li>Advanced settings with sensible defaults</li>
                <li>Professional YAML configuration generation</li>
            </ul>
        </div>
        <div>
            <h4 style="color: var(--accent-primary); margin-bottom: 15px;">⚡ Modern Experience</h4>
            <ul style="color: var(--text-secondary); line-height: 1.8;">
                <li>Dark theme throughout the entire interface</li>
                <li>Responsive design for desktop, tablet, and mobile</li>
                <li>Real-time synchronization between web and desktop</li>
                <li>Progressive enhancement with graceful degradation</li>
            </ul>
        </div>
        <div>
            <h4 style="color: var(--accent-primary); margin-bottom: 15px;">🔧 Full Control</h4>
            <ul style="color: var(--text-secondary); line-height: 1.8;">
                <li>Complete feature parity with Windows application</li>
                <li>Built-in Kometa execution and scheduling</li>
                <li>Task management with Windows Task Scheduler</li>
                <li>Localhost web server with full functionality</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Send page navigation event
    if (window.kometaSync) {
        kometaSync.sendPageNavigation(0); // Welcome page is index 0
    }
</script>
}